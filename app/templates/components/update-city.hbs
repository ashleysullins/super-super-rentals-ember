{{#if updateCityForm}}
  <h4>Update {{city.name}}'s information</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="name">City</label>
          {{input value=name id="name" placeholder=city.name}}
        </div>

        <div class="form-group">
          <label for="country">Country</label>
          {{input value=country id="country" placeholder=city.country}}
        </div>

        <div class="form-group">
          <label for="attractions">Attractions</label>
          {{input value=attractions id="attractions" placeholder=city.attractions}}
        </div>

        <button {{action 'update' city}} class="btn btn-xs btn-default">Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateCityForm'}} class="btn btn-xs btn-success">Update</button>
{{/if}}
